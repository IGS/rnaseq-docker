version: '2'
services:

  ergatis:
    environment:
      - DOCKER_HOST=###IP_HOST###
    image: adkinsrs/lgtseek:1.3
    links:
      - mongo
    mem_limit: 5120000000
    ports:
      - "8080:80"
    volumes:
      - ###BLAST_DB_DIR###:/mnt/blast:ro
      - ###OUTPUT_DATA###:/mnt/output_data
    volumes_from:
      - mongodata

